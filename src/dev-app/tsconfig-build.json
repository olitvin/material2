// TypeScript config file that is used to compile the dev-app. Target environment will be ES5,
// since the dev-app will be served in the browser.
{
  "compilerOptions": {
    // Needed for Moment.js since it doesn't have a default export.
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "lib": ["es6", "es2015", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/packages/dev-app",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": false,
    "typeRoots": [
      "../../node_modules/@types/!(node)"
    ],
    "baseUrl": ".",
    "paths": {
      "@material/*": ["../../dist/packages/material/*"],
      "@material": ["../../dist/packages/material"],
      "@cdk/*": ["../../dist/packages/cdk/*"],
      "@cdk": ["../../dist/packages/cdk"],
      "@material-experimental/*": ["../../dist/packages/material-experimental/*"],
      "@material-experimental": ["../../dist/packages/material-experimental"],
      "@cdk-experimental/*": ["../../dist/packages/cdk-experimental/*"],
      "@cdk-experimental": ["../../dist/packages/cdk-experimental"],
      "@material-moment-adapter": ["../../dist/packages/material-moment-adapter"],
      "@material-examples": ["../../dist/packages/material-examples"]
    }
  },
  "include": [
    "./typings.d.ts",
    "./system-rxjs-operators.ts",
    "./system-config.ts",
    "./main.ts",
    "**/*-module.ts"
  ]
}
